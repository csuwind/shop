<form bindsubmit='onSave'>
<view class="add-address">
  <view class="add-form">
    <view class="form-item">
      <input class="input" name="nickname" placeholder="姓名"  auto-focus/>
    </view>
    <view class="form-item">
      <input class="input" name="phone"  type="number" placeholder="手机号码" />
    </view>
    <view class="form-item">
      <input class="input" name="authnum" type="text" placeholder="身份证号码" />
    </view>
    <view class="form-item">
      <input class="input" name="banknum" type="number" placeholder="银行卡号" />
    </view>
    <view class="form-item">
      <input class="input" name="bank"  type="text" placeholder="开户行" />
    </view>
    <view class="form-item">
      身份证正面
    </view>
    <view class='auth1'>
      <image src="{{img_add_z}}" class='img' bindtap="chooseImagez" bindlongtap="longAuthZ" bindtouchstart="bindTouchStartZ" bindtouchend="bindTouchEndZ" name='authz'></image>
    </view>
    <view class="form-item">
      身份证反面
    </view>
    <view class='auth2'>
      <image src="{{img_add_f}}" class='img' bindtap="chooseImagef" bindlongtap="longAuthF" bindtouchstart="bindTouchStartF" bindtouchend="bindTouchEndF" name='authf'></image>
    </view>
  </view>

  <view class="btns">
    <button class="save" form-type='submit'>确定提交</button>
  </view>
</view>
</form>